{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "airbnb-base",
        "prettier"
    ],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "rules": {
        "no-console": "off",
        "quotes": [
            "error",
            "single",
            { "avoidEscape": true, "allowTemplateLiterals": false }
        ],
        "import/no-extraneous-dependencies": [
            "error",
            {
              "devDependencies": [
                "./webpack.common.js",
                "./webpack.dev.js",
                "./webpack.prod.js"
              ]
            }
        ]
    }
}
